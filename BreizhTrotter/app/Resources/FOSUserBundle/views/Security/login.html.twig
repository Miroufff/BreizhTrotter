{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="account-wall">
	<form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	    <label for="username">{{ 'Username'|trans }}</label>
	    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

	    <label for="password">{{ 'Password'|trans }}</label>
	    <input type="password" id="password" class="form-control" name="_password" required="required" />

	    <input type="checkbox" id="remember_me" class="form-control" name="_remember_me" value="on" />
	    <label class="checkbox pull-left" for="remember_me">{{ 'Remember me'|trans }}</label>

	    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'Validez'|trans }}" />
	</form>
</div>
{% endblock fos_user_content %}
