{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Constraint</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Updatedate</th>
                <td>{{ entity.updateDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Difflevel</th>
                <td>{{ entity.diffLevel }}</td>
            </tr>
            <tr>
                <th>Context</th>
                <td>{{ entity.context }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Diagaction</th>
                <td>{{ entity.diagAction }}</td>
            </tr>
            <tr>
                <th>Viabilityimpact</th>
                <td>{{ entity.viabilityImpact }}</td>
            </tr>
            <tr>
                <th>Tourismimpact</th>
                <td>{{ entity.tourismImpact }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        {% if is_granted("ROLE_SCENARIO_EDIT") %}
            <li>
                <a href="{{ path('constraint_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
        {% endif %}
        {% for activity in entity.activities %}
            <li>
                <a href="{{ path('activity_show', { 'id': activity.id }) }}">
                    Back to the activity {{ activity.name }}
                </a>
            </li>
        {% endfor %}
        {% if is_granted("ROLE_SCENARIO_DELETE") %}
            <li>{{ form(delete_form) }}</li>
        {% endif %}
    </ul>
{% endblock %}
