{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Equipment</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('scenario_show', { 'id': entity.activities.first.scenario.id }) }}">
            Back to the scenario
        </a>
    </li>
    <li>
        <a href="{{ path('equipment_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
