{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Action</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Step</th>
                <td>{{ entity.step }}</td>
            </tr>
            <tr>
                <th>Updatedate</th>
                <td>{{ entity.updateDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Feasibility</th>
                <td>{{ entity.feasibility }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Personincharge</th>
                <td>{{ entity.personInCharge }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ entity.budget }}</td>
            </tr>
            <tr>
                <th>Timelimit</th>
                <td>{{ entity.timeLimit }}</td>
            </tr>
            <tr>
                <th>Accomplishment</th>
                <td>{{ entity.accomplishment }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('action_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        {% for activity in entity.activities %}
            <li>
                <a href="{{ path('activity_show', { 'id': activity.id }) }}">
                    Back to the activity {{ activity.name }}
                </a>
            </li>
        {% endfor %}
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
