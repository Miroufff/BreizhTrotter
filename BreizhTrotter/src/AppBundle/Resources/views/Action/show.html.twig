{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Action</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>N° Action</th>
                <td>{{ entity.numero }}</td>
            </tr>
            <tr>
                <th>Etape du séjour</th>
                <td>{{ entity.step }}</td>
            </tr>
            <tr>
                <th>Date de MAJ de la fiche</th>
                <td>{{ entity.updateDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Niveau de Faisabilité</th>
                {% if entity.feasibility == 0 %}
                    <td>Forte</td>
                {% elseif entity.feasibility == 1 %}
                    <td>Moyenne</td>
                {% elseif entity.feasibility == 2 %}
                    <td>Faible</td>
                {% endif %}
            </tr>
            <tr>
                <th>Titre de l’action</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>N° des contraintes associées</th>
                <td>{{ entity.associateConstraint }}</td>
            </tr>
            <tr>
                <th>Responsable(s) de l’action</th>
                <td>{{ entity.personInCharge }}</td>
            </tr>
            <tr>
                <th>Descriptif et état actuel de la réflexion</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Bénéfices « Expérience Tourisme »</th>
                <td>{{ entity.experienceTourism }}</td>
            </tr>
            <tr>
                <th>Bénéfices « Mobilité durable »</th>
                <td>{{ entity.sustainableMobility }}</td>
            </tr>
            <tr>
                <th>Moyens de mobilité et/ou équipement concernés</th>
                <td>{{ entity.mobilityEquipment }}</td>
            </tr>
            <tr>
                <th>Acteurs impliqués</th>
                <td>{{ entity.involvedActor }}</td>
            </tr>
            <tr>
                <th>Livrables</th>
                <td>{{ entity.deliverable }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ entity.budget }}</td>
            </tr>
            <tr>
                <th>Délai</th>
                <td>{{ entity.timeLimit|date("m/d/Y", "Europe/Paris")}}</td>
            </tr>
            <tr>
                <th>Points de vigilance</th>
                <td>{{ entity.vigilancePoint }}</td>
            </tr>
            <tr>
                <th>Accomplishment</th>
                <td>{{ entity.accomplishment }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        {% if is_granted("ROLE_SCENARIO_DELETE") %}
            <li>
                <a href="{{ path('action_edit', { 'id': entity.id, 'idActivity': idActivity }) }}">
                    Modifier
                </a>
            </li>
        {% endif %}
        <li>
            <a href="{{ path('activity_show', { 'id': idActivity }) }}">
                Retour à l'activité
            </a>
        </li>
        {% if is_granted("ROLE_SCENARIO_DELETE") %}
            <li>{{ form(delete_form) }}</li>
        {% endif %}
    </ul>
{% endblock %}
