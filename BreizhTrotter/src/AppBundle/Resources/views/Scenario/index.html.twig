{% extends 'base.html.twig' %}

{% block body -%}
    <h1>List des Scenarios</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Zone</th>
                <th>Date</th>
                <th>Auteur</th>
                <th>Contenu</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('scenario_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.zone }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.description }}</td>
                {% if entity.open  %}
                    <td>Ouvert</td>
                {% else %}
                    <td>Fermé</td>
                {% endif %}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('scenario_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    {% if is_granted("ROLE_SCENARIO_EDIT") %}
                        <li>
                            <a href="{{ path('scenario_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    {% endif %}
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('scenario_new') }}">
                Créer un nouveau scenario
            </a>
        </li>
    </ul>
    {% endblock %}
