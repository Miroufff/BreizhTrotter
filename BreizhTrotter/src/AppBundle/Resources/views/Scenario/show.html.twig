{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Scenario</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Zone</th>
                <td>{{ entity.zone }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ entity.author }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ entity.content }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Open</th>
                <td>{{ entity.open }}</td>
            </tr>
            {% if entity.activities %}
                <tr></tr>
                <tr>
                    <th>Activities</th>
                    <table style="text-align: left; padding-left: 20px;">
                        {% for activity in entity.activities %}
                            <tr>
                                <th>Name</th>
                                <th>Day</th>
                                <th>Description</th>
                                <th>Feasibility</th>
                            </tr>
                            <tr>
                                <td><a href="{{ path('activity_show', { 'id': activity.id }) }}">{{ activity }}</a></td>
                                <td>{{ activity.day}}</td>
                                <td>{{ activity.description}}</td>
                                <td>{{ activity.feasibility}}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </tr>
            {% endif %}
        </tbody>
    </table>

    <ul class="record_actions">
        {% if entity.open %}
            <li>
                <a href="{{ path('activity_new', { 'id': entity.id })  }}">Add activity</a>
            </li>
            <li>
                <a href="{{ path('scenario_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
        {% endif %}
        <li>
            <a href="{{ path('scenario') }}">
                Back to the list
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
