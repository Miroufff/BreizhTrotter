<div>
    <div align="center">
        <TABLE WIDTH=100% CELLPADDING=7 CELLSPACING=0>
            <COL WIDTH=256*>
            <TBODY>
            <TR>
                <TD WIDTH=100% HEIGHT=178 VALIGN=TOP STYLE="border: none; padding: 0in">
                    <P CLASS="western" align="center"><FONT COLOR="#97958e">TERRITOIRE : {{ entity.zone }}</FONT></P>
                </TD>
            </TR>
            <tr>
                <td width="300" HEIGHT="100" valign="top">
                    <p align="center">
                        {% image '@AppBundle/Resources/public/images/LogoBreizhTrotter.PNG'  output="images/LogoBreizhTrotter.PNG" %}
                            <img src="{{ asset_url }}" width="322" height="124" alt="LOGO_Breizh-Trotter-Game.jpg" class="pull-left">
                        {% endimage %}
                    </p>
                </td>
            </tr>
            <TR>
                <TD WIDTH=100% HEIGHT=82 STYLE="border-top: none; border-bottom: 1px solid #4f81bd; border-left: none; border-right: none; padding: 0in">
                    <P ALIGN=CENTER><FONT COLOR="#9c2a64"><FONT SIZE=7 STYLE="font-size: 40pt">{{ entity.name }}</FONT></FONT></P>
                </TD>
            </TR>
            </TBODY>
            <TBODY>
            <TR>
                <TD WIDTH=100% HEIGHT=34 STYLE="border-top: 1px solid #4f81bd; border-bottom: none; border-left: none; border-right: none; padding: 0in">
                    <P ALIGN=CENTER><FONT COLOR="#e85612"><FONT SIZE=6 STYLE="font-size: 22pt">{{ entity.content }}</FONT></FONT></P>
                </TD>
            </TR>
            <TR>
                <TD WIDTH=100% HEIGHT=27 STYLE="border: none; padding: 0in">
                    <P ALIGN=CENTER><BR>
                    </P>
                </TD>
            </TR>
            <TR>
                <TD WIDTH=100% HEIGHT=10 STYLE="border: none; padding: 0in">
                    <P ALIGN=CENTER><B>{{ entity.author }}</B></P>
                </TD>
            </TR>
            <TR>
                <TD WIDTH=100% HEIGHT=10 STYLE="border: none; padding: 0in">
                    <P ALIGN=CENTER>{{ entity.date|date('d/m/Y') }}</P>
                </TD>
            </TR>
            </TBODY>
        </TABLE>
    </div>
    <p align="center">
        {% image '@AppBundle/Resources/public/images/LogoPartenaire.PNG'  output="images/LogoPartenaire.PNG" %}
            <img src="{{ asset_url }}" width="500" height="114" alt="LogoPartenaire.png" class="pull-left">
        {% endimage %}
    </p>
    <TABLE WIDTH=100% CELLPADDING=7 CELLSPACING=0>
        <COL WIDTH=256*>
        <TR>
            <TD WIDTH=100% VALIGN=TOP STYLE="border: none; padding: 0in">
                <P ALIGN="center"><FONT COLOR="#4c8a74"><FONT SIZE=3>{{ entity.description }}</FONT></FONT></P>
            </TD>
        </TR>
    </TABLE>
    <br clear="all"/>
    <p align="center">
        <img src="{{ asset(entity.image.AssetPath) }}" alt="{{ entity.image.name }}" width="470" height="310">
    </p>
</div>
<br clear="all"/>
<table border="1" cellspacing="0" cellpadding="0" width="1299" align="center">
    <thead>
    <tr>
        <td width="189" colspan="2">
            <p align="center">
                <strong>ETAPES</strong>
            </p>
        </td>
        <td width="106">
            <p align="center">
                <strong>MOYEN DE MOBILITE</strong>
            </p>
        </td>
        <td width="118">
            <p align="center">
                <strong>EQUIPEMENT</strong>
            </p>
        </td>
        <td width="224">
            <p align="center">
                <strong>PHOTO</strong>
            </p>
        </td>
        <td width="378">
            <p align="center">
                <strong>DESCRIPTIF EXPERIENCE</strong>
            </p>
        </td>
        <td width="118">
            <p align="center">
                <strong>FAISABILITE de l’étape</strong>
            </p>
        </td>
        <td width="83">
            <p align="center">
                <strong>Contraintes</strong>
            </p>
        </td>
        <td width="83">
            <p align="center">
                <strong>Actions</strong>
            </p>
        </td>
    </tr>
    </thead>
    <tbody>
        {% for activity in entity.activities %}
            <tr>
                <td width="59">
                    <p align="center">
                        <strong><em>{{ activity.day }}</em></strong>
                    </p>
                </td>
                <td width="130">
                    <p align="center">
                        {{ activity.name }}
                    </p>
                </td>
                <td width="106">
                    <p align="center">
                        <em>
                            {% for mobility in activity.mobilities %}
                                <img src="{{ asset(mobility.image.AssetPath) }}" alt="{{ mobility.image.name }}" width="36" height="36">
                            {% endfor %}
                        </em>
                    </p>
                </td>
                <td width="118">
                    <p align="center">
                        {% for equipment in activity.equipments %}
                            <img src="{{ asset(equipment.image.AssetPath) }}" alt="{{ equipment.image.name }}" width="36" height="36">
                        {% endfor %}
                    </p>
                </td>
                <td width="224">
                    <p align="center">
                        <img src="{{ asset(activity.image.AssetPath) }}" alt="{{ activity.image.name }}" width="164" height="107">
                    </p>
                </td>
                <td width="378">
                    <p align="center">
                        {{ activity.description }}
                    </p>
                </td>
                <td width="118">
                    <p align="center">
                        <strong>
                            {% if activity.feasibility == 0 %}
                                {% image '@AppBundle/Resources/public/images/Feasibility1.PNG'  output="images/Feasibility1.PNG" %}
                                    <img src="{{ asset_url }}" width="100" height="100" alt="Feasibility1.png" class="pull-left">
                                {% endimage %}
                            {% elseif activity.feasibility == 1 %}
                                {% image '@AppBundle/Resources/public/images/Feasibility2.PNG'  output="images/Feasibility2.PNG" %}
                                    <img src="{{ asset_url }}" width="100" height="100" alt="Feasibility2.png" class="pull-left">
                                {% endimage %}
                            {% elseif activity.feasibility == 2 %}
                                {% image '@AppBundle/Resources/public/images/Feasibility3.PNG'  output="images/Feasibility3.PNG" %}
                                    <img src="{{ asset_url }}" width="100" height="100" alt="Feasibility3.png" class="pull-left">
                                {% endimage %}
                            {% endif %}
                        </strong>
                    </p>
                </td>
                <td width="83">
                    {% for constraint in activity.constraints %}
                        <p align="center">
                            {{ constraint.numero }}
                        </p>
                    {% endfor %}
                </td>
                <td width="83">
                    {% for action in activity.actions %}
                        <p align="center">
                            {{ action.numero }}
                        </p>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>