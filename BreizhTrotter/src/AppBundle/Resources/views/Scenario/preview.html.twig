<div>
    <div align="center">
        <TABLE WIDTH=100% CELLPADDING=7 CELLSPACING=0>
            <COL WIDTH=256*>
            <TBODY>
            <TR>
                <TD WIDTH=20% HEIGHT=50 VALIGN=TOP STYLE="border: none; padding: 0in">
                </TD>
            </TR>
            <TR>
                <TD WIDTH=20% HEIGHT=10 VALIGN=TOP STYLE="font-size: 20px; border: none; padding: 0in">
                    <P CLASS="western" align="center"><FONT COLOR="#97958e">TERRITOIRE : {{ entity.zone }}</FONT></P>
                </TD>
            </TR>
            <tr>
                <td width="400" HEIGHT="150" valign="top">
                    <p align="center">
                        {% image '@AppBundle/Resources/public/images/LogoBreizhTrotter.PNG'  output="images/LogoBreizhTrotter.PNG" %}
                            <img src="{{ asset_url }}" width="200" height="100" alt="LOGO_Breizh-Trotter-Game.jpg" class="pull-left">
                        {% endimage %}
                    </p>
                </td>
            </tr>
            <TR>
                <TD WIDTH=100% HEIGHT=82 STYLE="border-top: none; border-bottom: 1px solid #4f81bd; border-left: none; border-right: none; padding: 0in">
                    <P ALIGN=CENTER><FONT COLOR="#9c2a64"><FONT SIZE=7 STYLE="font-size: 40pt">{{ entity.name }}</FONT></FONT></P>
                </TD>
            </TR>
            </TBODY>
            <TBODY>
            <TR>
                <TD WIDTH=100% HEIGHT=34 STYLE="border-top: 1px solid #4f81bd; border-bottom: none; border-left: none; border-right: none; padding: 0in">
                    <P ALIGN=CENTER><FONT COLOR="#e85612"><FONT SIZE=6 STYLE="font-size: 22pt">{{ entity.content }}</FONT></FONT></P>
                </TD>
            </TR>
            <TR>
                <TD WIDTH=100% HEIGHT=27 STYLE="border: none; padding: 0in">
                    <P ALIGN=CENTER><BR>
                    </P>
                </TD>
            </TR>
            <TR>
                <TD WIDTH=100% HEIGHT=10 STYLE="font-size: 25px; border: none; padding: 0in">
                    <P ALIGN=CENTER><B>{{ entity.author }}</B></P>
                </TD>
            </TR>
            <TR>
                <TD WIDTH=100% HEIGHT=10 STYLE="font-size: 25px; border: none; padding: 0in">
                    <P ALIGN=CENTER>{{ entity.date|date('d/m/Y') }}</P>
                </TD>
            </TR>
            </TBODY>
        </TABLE>
    </div>
    <p align="center">
        {% image '@AppBundle/Resources/public/images/LogoPartenaire.PNG'  output="images/LogoPartenaire.PNG" %}
            <img src="{{ asset_url }}" width="600" height="130" alt="LogoPartenaire.png" class="pull-left">
        {% endimage %}
    </p>
    <TABLE WIDTH=100% CELLPADDING=7 CELLSPACING=0>
        <COL WIDTH=256*>
        <TR>
            <TD WIDTH=100% VALIGN=TOP STYLE="border: none; padding: 0in">
                <P ALIGN="center"><FONT COLOR="#4c8a74"><FONT SIZE=3>{{ entity.description }}</FONT></FONT></P>
            </TD>
        </TR>
    </TABLE>
    <br clear="all"/>
    <p align="center">
        <img src="{{ asset(entity.image.AssetPath) }}" alt="{{ entity.image.name }}" width="80%" height="100%">
    </p>
</div>
<br clear="all"/>
<TABLE WIDTH=80% CELLPADDING=5 CELLSPACING=0 align="center">
    <COL WIDTH=53*>
    <COL WIDTH=103*>
    <COL WIDTH=49*>
    <COL WIDTH=51*>
    <thead>
    <tr>
        <TD COLSPAN=2 WIDTH=20% BGCOLOR="#97958e" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding-top: 0.05in; padding-bottom: 0in; padding-left: 0.1in; padding-right: 0.1in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>ETAPES</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
        <TD WIDTH=10% BGCOLOR="#9c2a64" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding: 0in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>MOYEN DE MOBILITE</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
        <TD WIDTH=10% BGCOLOR="#000000" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding: 0in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>EQUIPEMENT</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
        <TD WIDTH=10% BGCOLOR="#000000" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding: 0in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>PHOTO</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
        <TD COLSPAN=2 WIDTH=25% BGCOLOR="#003e82" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding-top: 0.05in; padding-bottom: 0in; padding-left: 0.1in; padding-right: 0.1in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>DESCRIPTIF EXPERIENCE</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
        <TD WIDTH=10% BGCOLOR="#97958e" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding: 0in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>FAISABILITE de l’étape</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
        <TD WIDTH=7.5% BGCOLOR="red" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding: 0in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>Contraintes</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
        <TD WIDTH=20% BGCOLOR="green" STYLE="border-top: 1.00pt solid #ffffff; border-bottom: none; border-left: 1.00pt solid #ffffff; border-right: 1.00pt solid #ffffff; padding: 0in">
            <P ALIGN=CENTER>
                <FONT COLOR="#ffffff">
                    <FONT FACE="Arial, serif">
                        <FONT SIZE=2>
                            <strong>Actions</strong>
                        </FONT>
                    </FONT>
                </FONT>
            </P>
        </TD>
    </tr>
    </thead>
    <tbody>
        {% for activity in entity.activities %}
            <tr>
                <td width="20" BGCOLOR="#97958e" STYLE="border-top: 1.00pt solid #ffffff;">
                    <p align="center">
                        <FONT COLOR="#ffffff">
                            <FONT FACE="Arial, serif">
                                <FONT SIZE=2>
                                    <strong>
                                        <em>
                                            {{ activity.day }}
                                        </em>
                                    </strong>
                                </FONT>
                            </FONT>
                        </FONT>
                    </p>
                </td>
                <td width="50">
                    <p align="center">
                        {{ activity.name }}
                    </p>
                </td>
                <td width="106">
                    <p align="center">
                        <em>
                            {% for mobility in activity.mobilities %}
                                <img src="{{ asset(mobility.image.AssetPath) }}" alt="{{ mobility.image.name }}" width="36" height="36">
                            {% endfor %}
                        </em>
                    </p>
                </td>
                <td width="118">
                    <p align="center">
                        {% for equipment in activity.equipments %}
                            <img src="{{ asset(equipment.image.AssetPath) }}" alt="{{ equipment.image.name }}" width="36" height="36">
                        {% endfor %}
                    </p>
                </td>
                <td width="224">
                    <p align="center">
                        <img src="{{ asset(activity.image.AssetPath) }}" alt="{{ activity.image.name }}" width="164" height="107">
                    </p>
                </td>
                <td width="378">
                    <p align="center">
                        {{ activity.description }}
                    </p>
                </td><td width="0">
                    <p align="center"></p>
                </td>
                <td width="118">
                    <p align="center">
                        <strong>
                            {% if activity.feasibility == 0 %}
                                {% image '@AppBundle/Resources/public/images/Feasibility1.PNG'  output="images/Feasibility1.PNG" %}
                                    <img src="{{ asset_url }}" width="100" height="100" alt="Feasibility1.png" class="pull-left">
                                {% endimage %}
                            {% elseif activity.feasibility == 1 %}
                                {% image '@AppBundle/Resources/public/images/Feasibility2.PNG'  output="images/Feasibility2.PNG" %}
                                    <img src="{{ asset_url }}" width="100" height="100" alt="Feasibility2.png" class="pull-left">
                                {% endimage %}
                            {% elseif activity.feasibility == 2 %}
                                {% image '@AppBundle/Resources/public/images/Feasibility3.PNG'  output="images/Feasibility3.PNG" %}
                                    <img src="{{ asset_url }}" width="100" height="100" alt="Feasibility3.png" class="pull-left">
                                {% endimage %}
                            {% endif %}
                        </strong>
                    </p>
                </td>
                <td width="83">
                    {% for constraint in activity.constraints %}
                        <p align="center">
                            {{ constraint.numero }}
                        </p>
                    {% endfor %}
                </td>
                <td width="83">
                    {% for action in activity.actions %}
                        <p align="center">
                            {{ action.numero }}
                        </p>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>